{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "ts-types",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declaration": true,
    "types": ["cypress", "node", "cypress-real-events"],
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*", "cypress/**/*"]
}
